.menuWrapper
  will-change: transform
  padding-bottom: 16px
  bottom: 0
  left: 50%
  transition: padding-bottom .4s cubic-bezier(.25, .1, .25, 1), transform .3s cubic-bezier(0, 0, .35, 1) .5s, opacity .1s ease-out .5s

.menu
  border-radius: 24px
  width: 210px
  padding: 13px 16px 15px
  box-shadow: 0 8px 16px -10px #2A2AEA;
  @media (max-width: 767px)
    width: 264px
    padding: 15px 20px 16px
    border-radius: 28px

  .menuInner
    transition: height .2s ease-out
  .menuUpper
    transition: opacity .2s ease-out
  .menuDescription
    transition: none //opacity .2s ease-out
  .menuSeparator
    margin: 14px 0;

.menuWrapper.menuOpen
  padding-bottom: 24px
  .menuInner
    transition: height .4s cubic-bezier(.25, .1, .25, 1)
    .menuUpper
      opacity: 1
      transition: opacity .3s ease-out .1s
    .menuDescription
      opacity: 1
      transition: opacity .3s ease-out .1s

.menuWrapperHidden
  transform: translate(-50%, 80px)
  opacity: 0

.menuWrapperVisible
  transform: translate(-50%, 0)
  opacity: 1

