menuInnerOpen()
  .menuInner
      height: 146px
      transition: height .4s cubic-bezier(.25, .1, .25, 1)
      @media (max-width: 767px)
        height: 136px
      .menuUpper
        opacity: 1
        transition: opacity .3s ease-out .1s
      .menuDescription
        opacity: 1
        transition: opacity .3s ease-out .1s

.menuWrapper
  will-change: transform
  padding-bottom: 16px
  bottom: 0
  left: 50%
  transition: padding-bottom .4s cubic-bezier(.25, .1, .25, 1), transform .3s cubic-bezier(0, 0, .35, 1) .5s, opacity .1s ease-out .5s

.menu
  border-radius: 24px
  width: 210px
  padding: 13px 16px 18px
  box-shadow: 0 8px 16px -10px #2A2AEA;
  @media (max-width: 767px)
    width: 264px
    padding: 15px 20px 20px
    border-radius: 28px

  .menuInner
    transition: height .2s ease-out
  .menuUpper
    transition: opacity .2s ease-out
  .menuDescription
    transition: none //opacity .2s ease-out

:global(.no-touchevents)
  .menuWrapper:hover
    padding-bottom: 24px
    .menu
      menuInnerOpen()

:global(.touchevents)
  .menuWrapper.menuOpen
    padding-bottom: 24px
    .menu
      menuInnerOpen()

.menuDescription
  margin-bottom: 5px
  @media (max-width: 767px)
    margin-bottom: 2px

.menuWrapperHidden
  transform: translate(-50%, 80px)
  opacity: 0

.menuWrapperVisible
  transform: translate(-50%, 0)
  opacity: 1

.logoBox
  width: 22px
  left: 16px
  top: 14px
  @media (max-width: 767px)
    top: 16px
    left: 18px

.contact
  margin-top: 4px
  @media (max-width: 767px)
    margin-top: 7px

.contact
.language
  padding: 4px 0
  @media (max-width: 767px)
    padding: 6px 0 7px
