.container
  max-width: 1200px
  margin: 0 auto
  transition: opacity 0.5s ease-out

.row
  padding-top: 9px
  padding-bottom: 11px
  border-radius: 4px
  &:hover
    transition: background-color .1s ease-out

.number
  width: 20px
  margin-right: 19px
  font-feature-settings: "tnum"

.client
  width: 168px
  margin-right: 24px

.project
  flex: 1
  margin-right: 44px

.category
  width: 168px
  margin-right: 24px

.type
  width: 168px

.arrowBox
  width: 10px
  right: calc(100% + 16px)
  top: 50%
  transform: translateY(-50%)
